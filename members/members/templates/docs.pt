<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <div metal:use-macro="view.layout.macros['master']">
        <div metal:fill-slot="content">


    <h1>Documents <tal:block tal:condition="cur_folder != ''">: ${cur_folder}</tal:block></h1>

    <a tal:condition="cur_folder != ''" href="${portal_url}/docs/${cur_folder}/..">one level up</a>
    <br/>
    <br/>

    <div tal:repeat="folder folders">
        <div class="folder">
            <a href="${portal_url}/docs/${cur_folder}/${folder}">${folder}</a>
        </div>
    </div>
    <ul>
        <li class="file" tal:repeat="file files">
            <a href="${portal_url}/doc/${cur_folder}/${file}">${file}</a>
        </li>
    </ul>
   

        </div>
    </div>
</html>
