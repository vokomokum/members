<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <div metal:use-macro="view.layout.macros['master']">
        <div metal:fill-slot="content">


    <h1>The ${wg.name} Workgroup</h1>

    <div class="wg-description" tal:content="wg.desc"></div>
 
    <div tal:condition="python: view.user.id == wg.leader.id or
        view.user.mem_admin">
        <a class="edit_link" href="${portal_url}/workgroup/${wg.id}/edit">edit this group</a>
    </div>

    <table class="list" align="center">
        <tr>
            <th>Admin</th>
            <th>Members</th>
        </tr>
        <tr class="list-content">
            <td>
                <a href="${portal_url}/member/${wg.leader.id}">${wg.leader.fullname()}</a>
            </td>
            <td>
                <tal:block tal:repeat="m wg.members">
                    <a tal:content="m.fullname()" href="${portal_url}/member/${m.id}"></a>
                    <span tal:condition="not repeat.m.end">,</span>
                </tal:block>
            </td>
        </tr>
    </table>

    
    <h2>Shifts in ${view.order.label}:</h2>
    
    <table class="list" align="center" tal:condition="view.user_is_wgleader">
        <tr>
            <th>Task</th>
            <th>Member</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        <!-- edit existing shifts form -->
        <tr tal:repeat="s shifts" class="list-content">
            <form action="${portal_url}/workgroup/${wg.id}/edit-shift/${s.id}" method="post">
                <td>
                    <select name="task_id">
                        <tal:block tal:repeat="t view.tasks">
                            <option tal:condition="t == s.task" value="${t.id}" selected="selected">${t}</option>
                            <option tal:condition="t != s.task" value="${t.id}">${t}</option>
                        </tal:block>
                    </select>
                </td>
                <td>
                    <select name="mem_id">
                        <tal:block tal:repeat="m wg.members">
                            <option tal:condition="m.id == s.mem_id" value="${m.id}" selected="selected">${m.fullname()}</option>
                            <option tal:condition="m.id != s.mem_id" value="${m.id}">${m.fullname()}</option>
                        </tal:block>
                    </select>
                </td>
                <td>
                    <select name="state">
                        <tal:block tal:repeat="st ['assigned', 'worked']">
                            <option tal:condition="st == s.state" value="${st}" selected="selected">${st}</option>
                            <option tal:condition="st != s.state" value="${st}">${st}</option>
                        </tal:block>
                    </select>
                </td>
                <td>
                    <div align="center">
                        <input type="image" src="${portal_url}/static/img/icons/save.png" title="save" value="save" name="action"></input>
                        <input type="image" src="${portal_url}/static/img/icons/delete.gif" title="delete" value="delete" name="action"></input>
                    </div>
                </td>
            </form>
        </tr>
        <!-- new shift form -->
        <tr class="list-content">
            <form action="${portal_url}/workgroup/${wg.id}/new-shift/in-order/${view.order.id}" method="post">
                <td>
                    <select name="task_id">
                        <option value="--">--</option>
                        <option tal:repeat="t view.tasks" value="{t.id}">${t}</option>
                    </select>
                </td>
                <td>
                    <select name="mem_id">
                        <option value="--">--</option>
                        <option tal:repeat="m wg.members" value="${m.id}">${m.fullname()}</option>
                    </select>
                </td>
                <td/>
                <td>
                    <input type="hidden" name="order_id" value="${view.order.id}"/>
                    <input type="submit" value="Create new shift"/>
                </td>
            </form>
        </tr>
    </table>
    <table class="list" align="center" tal:condition="not view.user_is_wgleader">
        <tr>
            <th>Task</th>
            <th>Member</th>
            <th>Status</th>
        </tr>
        <tr class="list-content" tal:repeat="s shifts">
            <td tal:content="s.task"></td>
            <td><a tal:content="s.member.fullname()" href="${portal_url}/member/${s.member.id}"></a></td>
            <td tal:content="s.state"></td>
        </tr>
    </table>

    <div id="shift-order-selector">Select other order:
        <form action="${portal_url}/workgroup/${wg.id}" method="post">
            <select name="order_id"> 
                <tal:block tal:repeat="o view.orders">
                    <option tal:condition="o.id == view.order.id" value="${o.id}" selected="selected">${o}</option>
                    <option tal:condition="o.id != view.order.id" value="${o.id}">${o}</option>
                </tal:block>
            </select>
            <input type="submit" name="action" value="show"/>
        </form>


    </div>
        </div>
    </div>
</html>
