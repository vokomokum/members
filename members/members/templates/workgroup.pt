<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <div metal:use-macro="view.layout.macros['master']">
        <div metal:fill-slot="content">


    <h1>The ${wg.name} Workgroup</h1>

    <div id="wg-description" tal:content="wg.desc"></div>

    <a class="mail-link" href="mailto:${wg.main_mailing_list_address}"
           title="The coordinators of this workgroup can be reached at ${wg.main_mailing_list_address}."><span class="glyphicon glyphicon-envelope"></span> Mail the coordinators</a>
    <a class="mail-link" href="mailto:${wg.all_mailing_list_address}"
           title="All members of this workgroup can be reached at ${wg.all_mailing_list_address}.
Usage of this address is limited to vokomokum members."><span class="glyphicon glyphicon-envelope"></span> Mail all members of ${wg.name}</a>
    <a tal:condition="python: view.user_is_wgleader or view.user.mem_admin"
            class="edit-link" href="${portal_url}/workgroup/${wg.id}/edit"><span class="glyphicon glyphicon-edit"></span> Edit this group</a>
    <a class="shift-link" href="${portal_url}/workgroup/${wg.id}/shifts/${now.year}/${now.month}"><span class="glyphicon glyphicon-calendar"></span> Monthly shift schedule</a>
    <a class="shift-link" href="${portal_url}/workgroup/${wg.id}/shifts/${now.year}"><span class="glyphicon glyphicon-list-alt"></span> Yearly shift overview</a>

    <table class="table table-striped table-bordered table-hover table-responsive" align="center">
        <tr>
            <th>Coordinators</th>
            <th>Members</th>
        </tr>
        <tr class="list-content">
            <td>
                <tal:block tal:repeat="l wg.active_leaders">
                   <a href="${portal_url}/member/${l.mem_id}">${l.fullname}</a>
                    <span tal:condition="not repeat.l.end">,</span>
                </tal:block>
            
            </td>
            <td>
                <tal:block tal:repeat="m wg.active_members">
                    <a tal:content="m.fullname" href="${portal_url}/member/${m.mem_id}"></a>
                    <span tal:condition="not repeat.m.end">,</span>
                </tal:block>
            </td>
        </tr>
    </table>

    <div>
    </div>
    <!-- TODO we have some space for meta-info here, maybe stats ... -->

        </div>
    </div>
</html>
