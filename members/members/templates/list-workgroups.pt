<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <div metal:use-macro="view.layout.macros['master']">
        <div metal:fill-slot="content">
           
            <table class="main" width="100%">
                <tr>
                    <th width="5%">ID</th>
                    <th width="15%">Name</th>
                    <th width="20%">Admin</th>
                    <th width="65%">Description</th>
                </tr>
                <tr tal:repeat="wg workgroups" class="special">
                    <td>
                        <a href="workgroup/${wg.id}" tal:content="wg.id" title="show/edit"></a>
                    </td>
                    <td>
                        <a href="workgroup/${wg.id}" tal:content="wg.name" title="show/edit"></a>
                    </td>
                    <td tal:define="l wg.leader">
                        <a href="member/${l.id}" tal:content="l.fullname()" title="This member is registered leader of this workgroup"></a>
                    </td>
                    <td tal:content="wg.desc"></td>
                </tr>
            </table>

        </div>
    </div>
</html>
