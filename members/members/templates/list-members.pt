<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <div metal:use-macro="view.layout.macros['master']">
        <div metal:fill-slot="content">
            
	        <h1>Members</h1>

			<div class="row">			
	            <form class="col-sm-12 text-right form-inline" role="form" option="${portal_url}/members" method="get" id="list-options">
	            	<div class="checkbox">
	                	<label>
							<!-- This is non-standard. Creating members should go via applicants -->
				            <a href="members/new" tal:condition="view.user.mem_admin">
				                <span class="glyphicon glyphicon-plus"></span> New member
				            </a>
		                	Showing ${view.mem_count} member(s).
	                	</label>
					</div>
					<div class="checkbox">
						<label>
							<input name="include_inactive" tal:attributes="checked python: show_inactive and 'checked' | nothing" type="checkbox"> Include inactive
						</label>
					</div>                
	            </form>
			</div>

            <table class="table table-striped table-bordered table-hover table-responsive">
            	<thead>
	                <tr>
	                    <th>
	                        <a href="${portal_url}/members?order_by=id&order_dir=${order_id_choice}">ID</a>
	                    </th>
	                    <th>
	                        <a href="${portal_url}/members?order_by=name&order_dir=${order_name_choice}">Name</a>
	                    </th>
	                    <th>Email</th>
	                    <th>Active</th>
	                    <th>Actions</th>
	                </tr>
            	</thead>
            	<tbody>
	                <tr tal:repeat="m members" data-href="member/${m.mem_id}">
	                    <td>
	                    	<span tal:content="m.mem_id"></span>
	                    </td>
	                     <td>
							 <span tal:content="m.fullname"></span>
	                    </td>
	                    <td><span tal:content="m.mem_email" tal:condition="m.mem_email"></span></td>
	                    <td>
	                        <span tal:attributes="class python: m.mem_active and 'glyphicon glyphicon-ok' or ''"></span>
	                    </td>
	                    <td>
		                    <a href="member/${m.mem_id}" title="show/edit"><span class="glyphicon glyphicon-edit"></span></a>
	                    </td>
	                </tr>
            	</tbody>
            </table>

        </div>
    </div>
</html>
