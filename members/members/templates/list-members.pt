<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <div metal:use-macro="view.layout.macros['master']">
        <div metal:fill-slot="content">
            
            <form option="${portal_url}/members" method="post" id="list-options">
                <span>Showing ${view.mem_count} member(s).</span>
                <span>
                    <input tal:condition="not: show_inactive" type="checkbox" name="include_inactive"></input>               
                    <input tal:condition="show_inactive" type="checkbox" name="include_inactive" checked="checked"></input>               
                    Include inactive
                </span>
                <input type="submit" value="List"/>
            </form>

            <div id="action-box">
                <a class="add-link" href="members/new" tal:condition="view.user.mem_admin">
                    New member
                </a>
            </div>            

            <table class="list" width="100%">
                <tr>
                    <th width="10%">
                        <a href="${portal_url}/members?order_by=id&order_dir=${order_id_choice}">ID</a>
                    </th>
                    <th width="40%">
                        <a href="${portal_url}/members?order_by=name&order_dir=${order_name_choice}">Name</a>
                    </th>
                    <th width="42%">Email</th>
                    <th width="8%">active</th>
                </tr>
                <tr tal:repeat="m members" class="list-content">
                    <td align="center">
                        <a href="member/${m.mem_id}" tal:content="m.mem_id" title="show/edit"></a>
                    </td>
                     <td>
                        <a href="member/${m.mem_id}" tal:content="m.fullname" title="show/edit"></a>
                    </td>
                    <td><span tal:content="m.mem_email" tal:condition="m.mem_email"></span></td>
                    <td align="center">
                        <span tal:condition="m.mem_active">yes</span>
                        <span tal:condition="not:m.mem_active">no</span>
                    </td>
                </tr>
            </table>

        </div>
    </div>
</html>
