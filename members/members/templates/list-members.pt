<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
    <div metal:use-macro="view.layout.macros['master']">
        <div metal:fill-slot="content">
           
            <!--a href="members/new" tal:condition="">
                Create new member
            </a-->
            <table class="main" width="100%">
                <tr>
                    <th width="5%">ID</th>
                    <th width="17%">Name</th>
                    <th width="20%">Email</th>
                    <th width="38%">Street</th>
                    <th width="20%">City</th>
                </tr>
                <tr tal:repeat="m members" class="special">
                    <td>
                        <a href="member/${m.id}" tal:content="m.id" title="show/edit"></a>
                    </td>
                     <td>
                        <a href="member/${m.id}" tal:content="m" title="show/edit"></a>
                    </td>
                    <td><span tal:content="m.mem_email" tal:condition="m.mem_email"></span></td>
                    <td tal:content="m.add_street()"></td>
                    <td tal:content="m.add_city()"></td>
                </tr>
            </table>

        </div>
    </div>
</html>
