<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
  <title>Vokomokum Members Application</title>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
  <meta name="description" content="Vokomokum Members web application" />
  <link rel="shortcut icon" href="${request.static_url('members:static/favicon.ico')}" />
  <link rel="stylesheet" href="${request.static_url('members:static/members.css')}" type="text/css" media="screen" charset="utf-8" />
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Neuton|Nobile:regular,i,b,bi&amp;subset=latin" type="text/css" media="screen" charset="utf-8" />
</head>
<body>

<tal:block tal:condition="not logged_in">
    <form action="login">
        <table>
            <tr>
                <td>Username:</td>
                <td>
                    <input type="hidden" name="came_from" length="30" value="${came_from}"/><br/>
                    <input type="text" name="login" length="30"/><br/>
                </td>
            </tr>
            <tr>
                <td>Password:</td>
                <td>
                    <input type="password" name="passwd" length="30"/><br/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" name="Login"/>
                </td>
            </tr>
        </table>
    </form>
</tal:block>

<tal:block tal:condition="logged_in">
    <h1>Members</h1>
    <ul tal:repeat="mem members">
        <li>${mem.mem_fname} ${mem.id} ${mem.workgroups}</li>
    </ul>

    <h1>Workgroups</h1>
    <ul tal:repeat="wg workgroups">
        <li tal:content="wg.name"></li>
    </ul>

    <h1>Shifts</h1>
    <ul tal:repeat="shift shifts">
        <li tal:content="shift.year, shift.month, shift.day, shift.mem_fname"></li>
    </ul>
</tal:block>


</body>
</html>
